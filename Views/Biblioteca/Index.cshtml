@model List<BibliotecaMVC.Models.Libro>

<h2>Mi Biblioteca</h2>

<p>
    <a asp-action="CrearAutor">Agregar Autor</a> |
    <a asp-action="CrearLibro">Agregar Libro</a>
</p>

@if (Model.Count == 0)
{
    <p>No hay libros registrados.</p>
}
else
{
    <ul>
        @foreach (var libro in Model)
        {
            <li>@libro.Titulo - @libro.Autor.Nombre</li>
        }
    </ul>
}


