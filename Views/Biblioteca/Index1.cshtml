@model List<BibliotecaMVC.Models.Libro>

<h2>Mi Biblioteca</h2>

@if (Model.Count == 0)
{
    <p>No hay libros registrados. Mostrando datos de ejemplo:</p>
    <ul>
        <li>El Principito - Antoine de Saint-Exupéry</li>
        <li>Cien Años de Soledad - Gabriel García Márquez</li>
        <li>1984 - George Orwell</li>
    </ul>
}
else
{
    <ul>
        @foreach (var libro in Model)
        {
            <li>@libro.Titulo - @libro.Autor.Nombre</li>
        }
    </ul>
}

